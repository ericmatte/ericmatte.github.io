{
    "compilerOptions": {
        "outDir": "build/dist",
        "sourceMap": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "preserve",
        "lib": ["es5", "es6", "es7", "dom"],
        "moduleResolution": "node",
        "rootDir": "src",
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "noEmit": true
    },
    "exclude": [
        "node_modules",
        "public",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts"
    ],
    "include": ["src"]
}
